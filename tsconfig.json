{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "rootDir": "./src",
    "esModuleInterop": true,
  },
  "include": ["./.eslintrc.js", "src/**/*"],
  "exclude": ["node_modules",]
}