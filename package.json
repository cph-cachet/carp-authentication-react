{
  "name": "@cph-cachet/carp.authentication",
  "repository": {
    "type": "git",
    "url": "https://github.com/cph-cachet/carp-auth-react.git"
  },
  "version": "0.1.1-dev.2",
  "keywords": [
    "CARP",
    "CACHET",
    "CAT",
    "AUTHENTICATION"
  ],
  "author": "Copenhagen Center for Health Technology (CACHET) https://carp.cachet.dk",
  "contributors": [
    "DÃ¡niel Jakab <> <https://github.com/jakdan99>"
  ],
  "license": "MIT",
  "scripts": {
    "version": "npm run build",
    "postversion": "git push && git push --tags",
    "build": "tsc && node ./lib/preparelib.js",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "TIMING=1 eslint -c .eslintrc.js --ext .ts src/",
    "clean": "rm -rf lib",
    "publish-patch": "npm version patch && npm publish ./lib",
    "publish-minor": "npm version minor && npm publish ./lib",
    "publish-major": "npm version major && npm publish ./lib",
    "publish-dev": "npm version prerelease --preid=dev && npm publish ./lib --tag dev",
    "postpublish": "npm run clean"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "oidc-client-ts": "^2.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-oidc-context": "^2.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
